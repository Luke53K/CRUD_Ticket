<%- include("layout/head", { title: "Evento", css: "home.css" }) %>

<%- include("partials/header") %>
<%- include("partials/navbar") %>

<main class="container event page">

  <!-- Imagen -->
  <section class="event-image">
    <img src="/img/evento.jpg" alt="Evento">
  </section>

  <!-- Información -->
  <section class="event-info">
    <h2>CONURBA CINE Vol. XX</h2>
    <p>- PROYECCIONES Y DEBATE</p>
    <p>- EXPO FOTO</p>
    <p>- INSTALACIONES</p>
    <p>- VISUALES EN VIVO</p>
